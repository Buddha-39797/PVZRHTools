        <Grid Width="800">
            <Button x:Name="LastStep" Content="上一步" Margin="318,80,344,20" Click="LastStep_Click" FontSize="16"/>
            <Button x:Name="NextStep" Content="安装" Margin="474,80,188,20" Click="NextStep_Click" FontSize="16"/>
            <Button x:Name="Close" Content="关闭" Margin="628,80,34,20" Click="Close_Click" FontSize="16"/>
        </Grid>

    </DockPanel>
</Page>
