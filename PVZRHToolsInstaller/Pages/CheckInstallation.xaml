<Page x:Class="PVZRHToolsInstaller.Pages.CheckInstallation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PVZRHToolsInstaller.Pages"
      mc:Ignorable="d" 
      Height="462" d:DesignWidth="800"
      Title="CheckInstallation">

    <DockPanel>
        <Label Content="安装PVZRHTools by b站@Infinite75" DockPanel.Dock="Top" Height="60" VerticalAlignment="Top" FontSize="36"/>
